<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Cover</th>
      <th>Name</th>
      <th>Description</th>
      <th>Active</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.cover %></td>
        <td><%= link_to book.name, book %></td>
        <td><%= book.description %></td>
        <td><%= book.active %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', admin_book_url(book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% if book.active? %>
            <td><%= link_to 'Inactivate', admin_book_url(book), method: :put %></td>
        <% else %>
            <td><%= link_to 'Activate', admin_book_url(book), method: :put %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

