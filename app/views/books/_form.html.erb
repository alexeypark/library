<%= simple_form_for(@book) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :cover %>
    <%= f.input :category_ids, collection: @categories, input_html: { multiple: true } %>
    <%= f.input :author_ids, collection: @authors, input_html: { multiple: true } %>
    <%= f.input :terms, as: :boolean, inline_label: 'Terms and conditions' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
